      <b>Name:</b>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <b>Passwort</b>
      <br/>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <b>Passwort best√§tigen:</b>
      <br/>
      <%= f.password_field :password_confirmation %>
    </div>
